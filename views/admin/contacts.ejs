<%include ./partials/header%>

<main class="container-fluid px-0 g-pt-65">
  <div class="row no-gutters g-pos-rel g-overflow-x-hidden">
    <%include ./partials/side_nav%>
    <div class="col g-ml-45 g-ml-0--lg g-pb-65--md">
      <div class="g-pa-20">
        <header class="g-mb-20">
          <div class="media">
            <div class="d-flex align-self-center">
              <h1 class="g-font-weight-300 g-font-size-28 g-color-black mb-0">
                Messages
              </h1>
            </div>
          </div>
        </header>
        <hr class="d-flex g-brd-gray-light-v7 g-my-30" />

        <div class="table-responsive g-mb-40">
          <table class="table u-table--v3 g-color-black table-hover">
            <thead>
              <tr>
                <th class="g-px-30">
                  <div class="media">
                    <div class="d-flex align-self-center">Name</div>
                  </div>
                </th>
                <th class="g-px-30">
                  <div class="media">
                    <div class="d-flex align-self-center">Email</div>
                  </div>
                </th>
                <th class="g-px-30">
                  <div class="media">
                    <div class="d-flex align-self-center">Subject</div>
                  </div>
                </th>
                <th class="g-px-30">
                  <div class="media">
                    <div class="d-flex align-self-center">Sent date</div>
                  </div>
                </th>
              </tr>
            </thead>

            <tbody>
              <%msgs.forEach(function(msg){%>
              <tr>
                <td class="g-px-30">
                  <div class="media">
                    <div class="media-body align-self-center text-left">
                      <a href="/admin/messages/<%=msg._id%>"> <%=msg.name%></a>
                    </div>
                  </div>
                </td>
                <td class="g-px-30"><%=msg.email%></td>
                <td class="g-px-30"><%=msg.subject%></td>
                <td class="g-px-30">
                  <%=msg.date.toDateString()%>
                </td>
              </tr>
              <%})%>
            </tbody>
          </table>
        </div>

        <%include ./partials/footer%>
      </div>
    </div>
  </div>
</main>
