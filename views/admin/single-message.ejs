<%include ./partials/header%>

<main class="container-fluid px-0 g-pt-65">
  <div class="row no-gutters g-pos-rel g-overflow-x-hidden">
    <%include ./partials/side_nav%>
    <div class="col g-ml-45 g-ml-0--lg g-pb-65--md">
      <div class="g-pa-20">
        <header class="g-mb-20">
          <div class="media">
            <div class="d-flex align-self-center">
              <h1 class="g-font-weight-300 g-font-size-28 g-color-black mb-0">
                <a
                  class="hs-admin-arrow-left u-link-v5 g-font-size-20 g-color-black  g-color-secondary--hover g-ml-20"
                  href="/admin/messages"
                ></a>
                Message from <%=msg.name%>
              </h1>
            </div>
          </div>
        </header>

        <hr class="d-flex g-brd-gray-light-v7 g-my-30" />

        <div class="card g-brd-gray-light-v7 g-rounded-3 g-mb-30">
          <header
            class="card-header g-bg-transparent g-brd-gray-light-v7 g-px-15 g-px-30--sm g-pt-15 g-pt-20--sm g-pb-10 g-pb-15--sm"
          >
            <div class="media">
              <h3
                class="d-flex align-self-center text-uppercase g-font-size-12 g-font-size-default--md g-color-black g-mr-10 mb-0"
              >
                <span class="text-muted">Subject : &nbsp;</span>
                <%=msg.subject%>
              </h3>

              <div class="media-body d-flex justify-content-end">
                <a
                  data-toggle="modal"
                  data-target="#deleteModal"
                  class="hs-admin-trash u-link-v5 g-font-size-20 g-color-gray-light-v3 g-color-primary--hover g-ml-20"
                  href="#"
                ></a>
              </div>
            </div>
          </header>

          <div class="card-block g-pa-15 g-pa-30--sm">
            <h4
              class="g-font-weight-300 g-font-size-18 g-font-size-22--md g-color-black g-mb-10"
            >
              <div>
                <%=msg.name%>
              </div>
              <small class="text-muted g-color-secondary">
                <%=msg.email%>
              </small>
              <br />
              <small class="text-muted">
                <%=msg.date.toDateString()%>
              </small>
            </h4>
            <p class="g-font-weight-300 g-color-gray-dark-v6 mb-0">
              <%=msg.body%>
            </p>
          </div>
        </div>

        <%include ./partials/footer%>
      </div>
    </div>
  </div>
</main>

<!-- Modal -->
<div class="modal fade" id="deleteModal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">conifurmation</h4>
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure to delete this message ?</p>
      </div>
      <div class="modal-footer">
        <a href="/admin/messages/<%=msg.id%>/delete" class="btn btn-danger">
          Delete
        </a>
        <button type="button" class="btn btn-default" data-dismiss="modal">
          Cancle
        </button>
      </div>
    </div>
  </div>
</div>
